{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm ci && npm run build",
        "distDir": "dist"
      }
    },
    {
      "src": "admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm ci && npm run build",
        "distDir": "dist"
      }
    },
    {
      "src": "api/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app.js"
    },
    {
      "src": "/admin",
      "dest": "admin/dist/index.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "admin/dist/index.html"
    },
    {
      "src": "/",
      "dest": "web/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "web/dist/index.html"
    }
  ]
}