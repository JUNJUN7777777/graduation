{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "web/dist",
        "buildCommand": "cd ./web && npm install && npm run build"
      }
    },
    {
      "src": "admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "admin/dist",
        "buildCommand": "cd ./admin && npm install && npm run build"
      }
    },
    {
      "src": "api/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "web/dist/index.html"
    },
    {
      "src": "/admin(/?.*)",
      "dest": "admin/dist/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/app.js"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "web/dist/404.html"
    }
  ]
}