{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm ci && npm run build",
        "distDir": "dist"
      }
    },
    {
      "src": "admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm ci && npm run build",
        "distDir": "dist"
      }
    },
    {
      "src": "api/app.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/app.js"
    },
    {
      "source": "/admin",
      "destination": "/admin/dist/index.html"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/admin/dist/index.html"
    },
    {
      "source": "/",
      "destination": "/web/dist/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/web/dist/index.html"
    }
  ]
}