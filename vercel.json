{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd web && npm ci && npm run build",
        "distDir": "web/dist"
      }
    },
    {
      "src": "admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd admin && npm ci && npm run build",
        "distDir": "admin/dist"
      }
    },
    {
      "src": "api/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/admin(/?.*)",
      "dest": "admin/dist/index.html"
    },
    {
      "src": "/",
      "dest": "web/dist/index.html"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "web/dist/404.html"
    }
  ]
}