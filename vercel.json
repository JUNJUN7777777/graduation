{
  "version": 2,
  "projects": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "buildCommand": "npm install && npm run build",
      "outputDirectory": "web/dist"
    },
    {
      "src": "admin/package.json",
      "use": "@vercel/static-build",
      "buildCommand": "npm install && npm run build",
      "outputDirectory": "admin/dist"
    },
    {
      "src": "api/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "web/dist/index.html"
    },
    {
      "src": "/admin(/?.*)",
      "dest": "admin/dist/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/app.js"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "web/dist/404.html"
    }
  ]
}